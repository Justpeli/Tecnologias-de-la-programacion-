{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Iinclude",
                "src/*.cc",
                "-o",
                "bin/game.exe",
                "lib/*.a"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compilador: g++"
        }
    ]
}